<UserControl x:Class="Urho3DMaterialEditor.Views.CodeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Urho3DMaterialEditor.Views"
             xmlns:fast="clr-namespace:FastColoredTextBoxNS;assembly=FastColoredTextBox"
                 xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"  

             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="grid"                           
          MinWidth="200" MinHeight="140">


        <local:CodeTextboxHost Text="{Binding MyTextField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!--<WindowsFormsHost>
            <fast:FastColoredTextBox>
            </fast:FastColoredTextBox>
        </WindowsFormsHost>-->
        
    </Grid>
</UserControl>
